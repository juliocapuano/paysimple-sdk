{
    "name": "juliocapuano/pay-simple-sdk",
    "description": "This package is a simple implementation of the PaySimple Api for PHP",
    "keywords": [
        "paysimple_sdk"
    ],
    "homepage": "https://github.com/juliocapuano/pay_simple_sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Julio Capuano",
            "email": "juliocapuano@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "fzaninotto/faker": "^1.9",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "PaySimple\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PaySimple\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "prefer-stable": true
}
